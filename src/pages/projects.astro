---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectsView from "../components/projects-view/ProjectsView";
import type { Project } from "../components/project-card/ProjectCard";
import "../styles/pages/projects.scss";
import HomeIntranetImage from "@assets/images/home_intranet.png";
import HomeWereviewImage from "@assets/images/home_wereview.png";
import HomeCciImage from "@assets/images/home_cci.png";
import HomeAppAdvisorImage from "@assets/images/home_appadvisor.png";
import HomeEcosAlphaImage from "@assets/images/home_ecos.png";
import HomeHopiumImage from "@assets/images/home_hopium.png";
import HomeVillaPakleniHvarImage from "@assets/images/home_pakleni.png";
import ImgIntranetImage1 from "@assets/images/img_intranet_1.png";
import ImgIntranetImage2 from "@assets/images/img_intranet_2.png";
import ImgWereviewImage from "@assets/images/img_wereview.png";
import ImgAppAdvisorImage1 from "@assets/images/img_appadvisor_1.png";
import ImgAppAdvisorImage2 from "@assets/images/img_appadvisor_2.png";

const initialProjectId = Astro.url.searchParams.get('project') ?? "1";
const projects: Project[] = [
  {
    id: "1",
    title: "Intranet We Made Ya",
    description:
      "Refonte et modernisation de l'intranet de l'agence We Made Ya, destiné à la gestion des commandes de spots audio et vidéo.",
    tags: ["Next.js", "TypeScript", "GraphQL", "AWS S3"],
    featured: true,
    liveUrl: "https://intranet.wmy.fr",
    githubUrl: "https://github.com/wemadeya/intranet-frontend",
    isPrivate: true,
    image: HomeIntranetImage.src,
    image2: ImgIntranetImage1.src,
    image3: ImgIntranetImage2.src,
    context:
      "L'agence disposait d'un intranet interne vieillissant, développé il y a une dizaine d'années. L'objectif était de concevoir une nouvelle plateforme plus moderne et performante, tout en centralisant l'ensemble des étapes de production.",
    challenges: [
      "Gestion de fichiers volumineux (vidéos, audios) avec upload vers AWS S3",
      "Utilisation de React Query pour la gestion des données",
      "Optimisation des performances pour gérer de grandes quantités de données",
      "Transformation de la base MySQL en GraphQL avec Hasura",
    ],
  },
  {
    id: "2",
    title: "We Review",
    description:
      "Plateforme de revue de vidéo et de textes pour les clients de We Made Ya, facilitant le processus de révision et de modification des spots.",
    tags: ["Next.js", "TypeScript", "Prisma", "PostgreSQL"],
    liveUrl: "https://wereview.wmy.fr",
    githubUrl: "https://github.com/wemadeya/machine-reviser",
    isPrivate: true,
    image: HomeWereviewImage.src,
    image2: ImgWereviewImage.src,
    context:
      "Création d'une plateforme collaborative permettant aux clients de We Made Ya de réviser et annoter leurs projets vidéo et textes en temps réel.",
    challenges: [
      "Implémentation d'un système d'annotations vidéo avec synchronisation temporelle (timecode)",
      "Gestion des permissions et des rôles utilisateurs",
      "Implémentation d'un système de notifications par mail",
    ],
  },
  {
    id: "3",
    title: "Calendrier CCI",
    description:
      "Application de gestion du calendrier du centre de conférences international d'Antananarivo.",
    tags: ["Next.js", "TypeScript", "Google API", "Node.js"],
    liveUrl: "https://calendrier.cci-api.com",
    githubUrl: "https://github.com/raparisonbryan/cci-frontend.git",
    isPrivate: false,
    image: HomeCciImage.src,
    context:
      "Développement d'une application web pour gérer le calendrier du centre de conférences.",
    challenges: [
      "Intégration avec l'API Google pour utiliser sheets comme base de données",
      "Gestion des conflits de réservation en temps réel",
      "Interface responsive pour une utilisation sur mobile et desktop",
    ],
  },
  {
    id: "4",
    title: "AppAdvisor",
    description:
      "Site web de veille sur les outils informatiques, basé sur un système d'avis et de classement.",
    tags: ["Next.js", "TypeScript", "MongoDB", "Node.js"],
    githubUrl: "https://github.com/raparisonbryan/App-Advisor-frontend.git",
    isPrivate: false,
    image: HomeAppAdvisorImage.src,
    image2: ImgAppAdvisorImage1.src,
    image3: ImgAppAdvisorImage2.src,
    context:
      "Application permettant aux utilisateurs de mettre des avis afin d'avoir un système de classement des outils web, comptant pour un projet de fin d'études.",
    challenges: [
      "Mise en place d'un système de notation et de classement dynamique",
      "Utilisation de React Query pour la gestion des données",
      "Création d'algorithmes de statistiques",
    ],
  },
  {
    id: "5",
    title: "Ecos Alpha",
    description:
      "Site vitrine présentant l'application 'Ecos Alpha', visant à aider les étudiants en médecine à se préparer aux Examens Cliniques Objectifs Structurés (ECOS).",
    tags: ["HTML", "CSS", "Javascript"],
    liveUrl: "https://ecosalpha.fr",
    isPrivate: false,
    image: HomeEcosAlphaImage.src,
    context:
      "Création d'un site vitrine moderne et informatif pour présenter l'application Ecos Alpha aux étudiants en médecine.",
    challenges: [
      "Design responsive et morderne",
      "Optimisation SEO pour améliorer la visibilité en ligne",
      "Intégration d'un simulateur de classement aux ECOS",
    ],
  },
  {
    id: "6",
    title: "Hopium",
    description:
      "Site vitrine présentant Hopium, un fabricant français de systèmes de motorisation électrique à pile à combustible hydrogène pour les transports lourds.",
    tags: ["Webflow", "Javascript"],
    liveUrl: "https://hopium.com",
    isPrivate: false,
    image: HomeHopiumImage.src,
    context:
      "Développement d'un site vitrine sobre mais moderne pour présenter Hopium.",
    challenges: [
      "Création d'animations fluides et performantes",
      "Intégration via Webflow",
      "Optimisation SEO pour améliorer la visibilité en ligne",
      "Utilisation d'nu CMS pour gérer les médias et les informations financières",
    ],
  },
  {
    id: "7",
    title: "Villa Pakleni Hvar",
    description:
      "Site vitrine présentant la villa Pakleni, une villa de luxe située à Pakleni, à Hvar, en Croatie.",
    tags: ["Wordpress", "Elementor"],
    liveUrl: "https://villapaklenihvar.com/",
    isPrivate: false,
    image: HomeVillaPakleniHvarImage.src,
    context:
      "Création d'un site vitrine luxueux pour présenter la villa Pakleni et l'île de Hvar.",
    challenges: [
      "Design reflétant le luxe de la villa",
      "Intégration via Wordpress et Elementor",
    ],
  },
];
---

<BaseLayout
  title="Projets | Bryan - Développeur Full Stack"
  description="Découvrez mes projets de développement web : applications React, sites e-commerce, dashboards et plus encore."
>
  <section class="projects-page">
    <div class="container">
      <header class="page-header">
        <span class="page-label">Portfolio</span>
        <h1 class="page-title">Mes projets</h1>
      </header>

      <ProjectsView projects={projects} initialProjectId={initialProjectId} client:load />
    </div>
  </section>
</BaseLayout>
